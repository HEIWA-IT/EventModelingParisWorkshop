@model Evaluation.Features.Evaluation.Evaluate

@{
    ViewData["Title"] = "Evaluation";
}

<form asp-action="Publish">
    <div class="row">
        <div class="col">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GuestId" class="control-label"></label>
                <input asp-for="GuestId" class="form-control" />
                <span asp-validation-for="GuestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomNumber" class="control-label"></label>
                <input asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="From" class="control-label"></label>
                <input asp-for="From" class="form-control" />
                <span asp-validation-for="From" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="To" class="control-label"></label>
                <input asp-for="To" class="form-control" />
                <span asp-validation-for="To" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            @for (int i = 0; i < Model.Ratings.Length; i++)
            {
            <div class="form-group row">
                <input asp-for="Ratings[i].RateType" class="form-control" readonly value="@Model.Ratings[i].RateType" />
                <input asp-for="Ratings[i].Rate" class="kv-ltr-theme-svg-star rating-loading form-control" data-show-clear="false" data-show-caption="false" dir="ltr" data-min="0" data-max="5" data-step="1" data-size="sm" />
                <span asp-validation-for="Ratings[i].RateType" class="text-danger"></span>
            </div>
            }
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $('.kv-ltr-theme-svg-star').rating({
                hoverOnClear: false,
                theme: 'krajee-svg'
            });
        });
    </script>
}